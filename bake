#!/usr/bin/env bash

# nsfu
cd "$(dirname "$0")"
if [ -f ".env" ]; then
  export $(grep -v '^#' .env | xargs -d '\n')
fi

INSTALL_DIR=`eval echo $INSTALL_DIR`
set -x

if [ "$1" = "run" ]; then
  echo "Unimplemented"
elif [ "$1" = "dev" ]; then
  export DEV=1
  uv run yams
elif [ "$1" = "install" ]; then
  uv tool install .
elif [ "$1" = "uninstall" ]; then
  uv tool remove yams
elif [ "$1" = "build" ]; then
  $BUILD_CMD
elif [ "$1" = "clean" ]; then
  echo "Unimplemented"
else
  set +x
  echo "Shiver me timbers!!.. Invalid arrghh - $1"
  exit 1
fi



